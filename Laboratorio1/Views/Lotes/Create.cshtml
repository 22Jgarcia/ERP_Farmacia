@model Laboratorio1.Models.Lote

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Lote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductoId" class="control-label"></label>
                <select asp-for="ProductoId" class ="form-control" asp-items="ViewBag.ProductoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumeroLote" class="control-label"></label>
                <input asp-for="NumeroLote" class="form-control" />
