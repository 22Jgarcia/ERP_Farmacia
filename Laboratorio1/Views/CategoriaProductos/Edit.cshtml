@model Laboratorio1.Models.CategoriaProducto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CategoriaProducto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaProductoId" />
            <div class="form-group">
                <label asp-for="NombreCategoriaProducto" class="control-label"></label>
                <input asp-for="NombreCategoriaProducto" class="form-control" />
